<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".DuaShow">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:title="Dua"
                app:titleTextColor="@color/ne" />

            <Button
                android:id="@+id/settings"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_alignBottom="@+id/toolbar"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/settings" />

        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="4dp"
            android:text="After Rainfall"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textDirection="anyRtl"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/dua1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="10dp"
            android:padding="4dp"

            android:textColor="#d60084"
            android:textDirection="anyRtl"
            android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/duashowad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                ads:adSize="BANNER"
                ads:adUnitId="@string/bannerid"></com.google.android.gms.ads.AdView>

        </RelativeLayout>

        <TextView
            android:id="@+id/trans1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="10dp"
            android:maxLines="50"
            android:padding="4dp"
            android:textColor="#d60084"
            android:textDirection="anyRtl"
            android:textSize="25sp" />
    </LinearLayout>
</ScrollView>